{
  "name": "@adaptive-sm/email-generator",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "email dev --dir=./src/templates",
    "dev:worker": "wrangler dev",
    "start": "bun ./src/server/server.ts",
    "deploy": "wrangler deploy",
    "generateExports": "bun run src/generateExports.ts",
    "generateBarrel": "bun run src/generateBarrelImports.ts",
    "build": "bun tsc --build --clean && bun tsc -p ./tsconfig.lib.json",
    "tail": "wrangler tail email-generator-worker",
    "test": "bun test",
    "test:w": "bun test --watch",
    "clean": "rm -rf ./dist",
    "reset": "rm -rf ./node_modules"
  },
  "dependencies": {
    "@react-email/components": "0.5.3",
    "@react-email/render": "^1.2.3",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@react-email/preview-server": "^4.2.11",
    "@types/bun": "latest",
    "react-email": "^4.2.11",
    "typescript": "^5.9.2",
    "wrangler": "^4.38.0"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "trailingComma": "all"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts"
}
